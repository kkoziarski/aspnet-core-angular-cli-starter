{
    "version": "0.1.0",
    //"command": "cmd",
    // "args": ["/C"],
    "isShellCommand": true,
    "showOutput": "always",
    "suppressTaskName": true,
    // "options": {
    //     "cwd": "${workspaceRoot}\\src\\Backend"
    // },
    "tasks": [
        {
            "taskName": "build",
            "command": "dotnet",
            "args": [
                "build", 
                "Backend.csproj"
            ],
             "options": {
                "cwd": "${workspaceRoot}\\src\\Backend"
            },
            "isBuildCommand": true,
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "build dotnet",
            "command": "dotnet",
            "args": [
                "build", 
                "Backend.csproj"
            ],
            "options": {
                "cwd": "${workspaceRoot}\\src\\Backend"
            },
            "isBuildCommand": true,
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "start dotnet",
            "command": "dotnet",
            "args": [
                "run"
            ],
            "options": {
                "cwd": "${workspaceRoot}\\src\\Backend"
            },
            "isBuildCommand": true,
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "start dotnet watcher",
            "command": "dotnet",
            "args": [
                "watch",
                "run"
            ],
            "options": {
                "cwd": "${workspaceRoot}\\src\\Backend"
            },
            "isShellCommand": true,
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "restore",
            "command": "dotnet",
            "args": [
                "restore", 
                "Backend.csproj"
            ],
            "options": {
                "cwd": "${workspaceRoot}\\src\\Backend"
            },
            "isShellCommand": true,
            "problemMatcher": "$msCompile"
        },
        {
            "taskName": "ng-start",
            "command": "npm",
            "args": [
                "start"
            ],
            "isShellCommand": true,
            "options": {
                "cwd": "${workspaceRoot}\\src\\Frontend"
            }
        }
    ]
}